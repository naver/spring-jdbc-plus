# top-most EditorConfig file
root = true

[*.{kt, kts}]
disabled_rules = import-ordering, indent
# disable indent rule until https://github.com/pinterest/ktlint/issues/764 is fixed.

[*]
# [encoding-utf8]
charset = utf-8

# [newline-lf]
end_of_line = lf

# [newline-eof]
insert_final_newline = true

[*.bat]
end_of_line = crlf

[*.java]
# [indentation-tab]
indent_style = tab

# [4-spaces-tab]
indent_size = 4
tab_width = 4

# [no-trailing-spaces]
trim_trailing_whitespace = true

[line-length-120]
max_line_length = 120
